{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "A minimal Electron application with React",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "dev:electron": "nodemon --watch src/main --exec electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder",
    "test": "jest"
  },
  "keywords": ["electron", "react"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "style-loader": "^3.3.4",
    "wait-on": "^7.2.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.example.{{projectName}}",
    "productName": "{{projectName}}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/index.html"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}